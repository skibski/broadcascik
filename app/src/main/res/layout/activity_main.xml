<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.burzynski.jakub.broadcascik.MainActivity">

    <TextView
        android:text="Menu główne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t1"
        android:layout_alignBottom="@+id/view2" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF0000FF"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_height="130dp"
                app:srcCompat="@drawable/ustawienia"
                android:id="@+id/b1"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_width="match_parent" />

            <ImageButton
                app:srcCompat="@drawable/papier"
                android:id="@+id/b2"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_height="130dp"
                android:layout_width="match_parent" />

            <ImageButton
                app:srcCompat="@drawable/osoba"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_height="130dp"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="ustawienia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:layout_weight="0.76"
                android:gravity="center_horizontal" />

            <TextView
                android:text="telefon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:text="kontakty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent">

            <ImageButton
                app:srcCompat="@drawable/dom"
                android:id="@+id/b6"
                android:scaleType="centerCrop"
                android:layout_height="130dp"
                android:layout_width="95dp" />

            <ImageButton
                android:layout_height="130dp"
                app:srcCompat="@drawable/info"
                android:id="@+id/b4"
                android:scaleType="centerCrop"
                android:layout_width="95dp" />

            <ImageButton
                app:srcCompat="@drawable/pisak"
                android:id="@+id/b5"
                android:scaleType="centerCrop"
                android:layout_height="130dp"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="strona domowa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:layout_weight="0.32"
                android:gravity="center_horizontal" />

            <TextView
                android:text="informacje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_weight="0.95"
                android:gravity="center_horizontal" />

            <TextView
                android:text="sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="1.38"
                android:gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:srcCompat="@drawable/gory"
                android:id="@+id/b7"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageButton
                app:srcCompat="@drawable/gps"
                android:id="@+id/b8"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_height="130dp"
                android:layout_width="match_parent" />

            <ImageButton
                app:srcCompat="@drawable/sms"
                android:id="@+id/b9"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_height="130dp"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="obrazy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:text="mapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <TextView
                android:text="email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
